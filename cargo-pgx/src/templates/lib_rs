use pgx::*;

pg_module_magic!();

#[pg_extern]
fn hello_{name}() -> &'static str {{
    "Hello, {name}"
}}

#[cfg(any(test, feature = "pg_test"))]
mod tests {{
    use pgx::*;

    #[test]
    fn make_idea_happy() {{ }}

    #[pg_test]
    fn test_hello_{name}() {{
        assert_eq!("Hello, {name}", crate::hello_{name}());
    }}

}}